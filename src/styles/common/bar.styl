.header-bar
  position relative
  padding 5px 10px
  margin-bottom 3px
  &::before
    content ''
    width 100%
    height 3px
    bottom -3px
    display block
    position absolute
    background linear-gradient(45deg, #41d1fb, #67f7ad)
    left: 0;

.header-bar__title
  flex 1 1 auto
  text-align center
