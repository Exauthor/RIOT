@import './mixins.styl'
@import './general/index.styl'


::-webkit-scrollbar
  width 4px
  &:hover
    cursor pointer

/* Track */
::-webkit-scrollbar-track
  background transparent

/* Handle */
::-webkit-scrollbar-thumb
  background var(--color-active)
  border-radius 2px

html
  font-family 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI',
    Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size 16px
  font-weight 300
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

*,
*:before,
*:after
  box-sizing border-box
  margin 0
  font forText

:root 
  --color-second #ff1c76
  --color-active #04ded4
  --color-bg #19102E
  --color-green #91e60a
  --size-widget-block 20vmin

h1, h2, h3, h4, h5, h6
  font-weight 300

body
  color var(--color-active)
  padding 0
  margin 0
  background-color var(--color-bg)
  font-size 1.1rem

.home
  display flex
  justify-content center

.container
  position relative
  width 100vmin
  display flex
  flex-wrap wrap

