minPart = 0.6vmin
mainColor = #ff105e
// minPart = 1.2vmin // for 3x3

.settings-page
  display flex
  margin 0 auto
  width 120vmin

.settings__clock
  width 90%
  height 90%
  center()
  display flex
  align-items center
  justify-content center
  background url('../../src/assets/clock.svg') center/90% no-repeat
  border 2px solid var('--color-bg-light')
  border-radius: 50%
  box-shadow: 0 -1 * minPart minPart rgba(255, 255, 255, 0.07),
              inset 0 -1 * minPart minPart rgba(255, 255, 255, 0.07),
              0 minPart minPart rgba(0, 0, 0, 0.3),
              inset 0 minPart minPart rgba(0, 0, 0, 0.3);
  &::before
    content ''
    display block
    width minPart
    height minPart
    border-radius 50%
    background white
    z-index 3
    center()

.settings__hour, .settings__minute, .settings__second
  display flex
  justify-content center
  position absolute

.settings__hour
  width 40%
  height 40%

.settings__minute
  width 50%
  height 50%

.settings__second
  width 60%
  height 60%

.settings__hour-path
  &::before
    content ''
    display block
    height 50%
    width 3.5%
    min-width 4px
    background var(--color-second)
    border-radius 10px 10px 0 0 
    transform-origin 50% 100%

.settings__minute-path
  &::before
    content ''
    display block
    height 50%
    width 1.5%
    min-width 2.5px
    border-radius 10px 10px 0 0 
    background white
    transform-origin 50% 100%

.settings__second-path, .settings__minute-path, .settings__hour-path
  width 100%
  height 100%
  display flex
  justify-content center

.settings__second-path
  &::before
    content ''
    display block
    height 65%
    width .4%
    min-width 1px
    background white

@keyframes clock
  from
    transform rotate(0deg)
  to 
    transform rotate(360deg)
