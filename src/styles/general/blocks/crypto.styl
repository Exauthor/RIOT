.tabs-items
  display flex

.crypto-blocks
  height 100%
  display flex
  align-items center
  justify-content space-between
  padding 12px

.crypto-block
  display flex
  align-items center
  justify-content space-between
  width calc(var(--size-widget-block) - 12px)
  height calc(var(--size-widget-block) - 24px)

.crypto-block__icon
  width 70%
  height 70%

.crupto-block__info
  height 100%
  display flex
  flex-direction column
  justify-content space-between
  text-align right

.crypto-block--up
  color #29FC4B 

.crypto-block--down
  color var(--color-second)
