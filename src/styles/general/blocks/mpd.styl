.mpd-block
  padding 6px
  height 100%

.mpd-block
  display flex
  align-items center

.mpd-block__body
  width 100%
  height 100%

.mpd-block__music
  width 35%
  height 100%
  border-left 1px solid var(--color-active)

.mpd-block__header-interface
  padding 0 6px 6px
  border-bottom 1px solid var(--color-active)
  display flex
  justify-content space-between

.mpd-block__icon
  min-width 3.5vmin
  min-height 3.5vmin
  position relative

.mpd-block__title
  text-align center

.mpd-block__icon--play
  &::before, &::after
    height 38%
    transform translateX(1vmin) rotate(0deg)
    transition .15s
    right 50%
    content ''
    display block
    width 1px
    background currentColor
    position absolute
  &::before
    top 12%
  &::after
    bottom 12%
  
.mpd-block__icon--arrow, .mpd-block__icon--play-stop
  &::before, &::after
    transition .15s
    right 50%
    content ''
    display block
    width 1px
    height 50%
    background currentColor
    position absolute
    transform-origin 100% 50%
    transform translateX(-50%) rotate(-45deg)
  &::before
    top 7.5%
  &::after
    bottom 7.5%
    transform-origin 0% 50%
    transform translateX(-50%) rotate(45deg)


.mpd-block__icon--play-line
  width 1px
  height: 75%
  position absolute
  background currentColor
  left 27%
  display block
  top 50%
  transform translateY(-50%)

.mpd-block__icon--arrow--prev
  transform scaleX(-1)

.mpd-block__icon--repeat
  position relative
  &::before
    content ''
    display block
    width 80%
    height 80%
    border 1px solid currentColor
    border-radius 50%
    center()
  
.mpd-block__track-list
  padding 6px
  height calc(100% - 3.5vmin)
  overflow auto

.mpd-block__track-item
  padding 2px 0
  cursor pointer
  width 100%
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
